rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ============================================
    // User CV Storage
    // ============================================

    match /users/{userId}/cvs/{fileName} {
      // Users can read their own CVs
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can upload PDFs (max 10MB)
      allow write: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.size < 10 * 1024 * 1024  // 10MB max
                    && request.resource.contentType == 'application/pdf';

      // Users can delete their own CVs
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // ============================================
    // Optimized CV Storage (generated by system)
    // ============================================

    match /users/{userId}/optimized/{fileName} {
      // Users can read their own optimized CVs
      allow read: if request.auth != null && request.auth.uid == userId;

      // Only server can write optimized CVs
      allow write: if false;

      // Users can delete their own optimized CVs
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // ============================================
    // User Avatars
    // ============================================

    match /users/{userId}/avatar/{fileName} {
      // Public read for avatars
      allow read: if true;

      // Users can upload their own avatars (max 5MB, images only)
      allow write: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.size < 5 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');

      // Users can delete their own avatar
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // ============================================
    // Temporary Upload Storage (for processing)
    // ============================================

    match /temp/{userId}/{fileName} {
      // Users can read and write to their temp storage
      allow read, write: if request.auth != null
                          && request.auth.uid == userId
                          && request.resource.size < 10 * 1024 * 1024;

      // Auto-deletion after 24 hours is handled by Cloud Function
    }

    // ============================================
    // Public Assets (static content)
    // ============================================

    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admin via console
    }
  }
}
